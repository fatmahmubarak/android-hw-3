<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/ggg"
    >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:text="السيره الذاتيه"
        android:textAlignment="center"
        android:textSize="40sp"
       android:textColor="#3EA99F"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="الاسم"
        android:inputType="textPersonName"
        android:paddingRight="20dp"
        android:textColorHint="#3EA99F" />

    <EditText
        android:id="@+id/age"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="العمر"
        android:inputType="textPersonName"
        android:paddingRight="20dp"
        android:textColorHint="#3EA99F" />

    <EditText
        android:id="@+id/b"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="الوظيفه"
        android:inputType="textPersonName"
        android:paddingRight="20dp"
        android:textColorHint="#3EA99F" />

    <EditText
        android:id="@+id/phonenumbar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="رقم الهاتف"
        android:inputType="textPersonName"
        android:paddingRight="20dp"
        android:textColorHint="#3EA99F" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="الايمبل"
        android:inputType="textPersonName"
        android:paddingRight="20dp"
        android:textColorHint="#3EA99F" />

    <Button
        android:id="@+id/button"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonathkars"
        android:text="تم"
        android:textColor="#ffffff"
        android:textSize="30dp" />

</LinearLayout>